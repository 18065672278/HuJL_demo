@import '/src/pages/common/common.wxss';

page>view {
  margin-bottom: 100rpx;
}

swiper {
  height: 430rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

/*货架列表标题*/

.shelf-header {
  display: flex; /*设置为 flex 布局的元素*/
  justify-content: space-between; /*均匀排列每个元素，首、末两元素分别位于起点和终点*/
  font-weight: 900;
  margin: 20rpx 30rpx;
}

.shelf-title {
  display: flex;
  flex-direction: column;
}

.shelf-title-en {
  border-bottom: #000 solid 3px;
  margin-bottom: 10rpx;
}

.shelf-more {
  align-self: center; /*设置居中*/
}

/*货架列表*/

.content__friend {
  padding: 0;
  margin: 0;
  margin-top: 20rpx;
}

.photo-flex {
  display: flex;
  margin-left: 40rpx;
  margin-bottom: 40rpx;
}

.photo-box {
  border-radius: 16rpx;
  width: 45%;
  margin-right: 40rpx;
  background: white;
  line-height: normal;
  text-align: center;
}

.index-photo {
  width: 100%;
  height: 170rpx;
  border-radius: 16rpx;
}

.index-text {
  font-size: 30rpx;
  font-family: "MicrosoftYaHei";
  padding-left: 40rpx;
}

.content-text {
  font-size: 28rpx;
  color: #252424;
}

/*首页菜单目录*/

.categoryList {
  width: 100%;
  height: 350rpx;
  border-bottom: 20rpx solid #f4f4f4;
  position: relative;
}

.category-info {
  display: inline-block;
  text-align: center;
  position: relative;
  margin-top: 20rpx;
  height: 150rpx;
  width: 25%;
}

.category-image {
  width: 95rpx;
  height: 95rpx;
}

.category-text {
  font-size: 25rpx;
  width: 100%;
  line-height: 30rpx;
}

/*view标题*/

.header-title {
  text-align: left;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 31rpx;
  font-weight: 600;
}

/*猜你喜欢*/

.content {
  margin-top: 10rpx;
  background: #fff;
}

.content .hd {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  border-bottom: 1px solid #ededed;
}

.content .hd image {
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 24rpx;
}

.content .word-1 {
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 10rpx;
}

.content .word-2 {
  font-size: 24rpx;
  color: #808080;
  position: relative;
  top: -1rpx;
}

.content .word-3 {
  font-size: 28rpx;
  color: #09c083;
  margin-right: 8rpx;
}

.list {
  padding: 0 20rpx;
}

.list .item {
  border-bottom: 1px solid #ededed;
  padding: 20rpx 0;
}

.list .item image {
  width: 120rpx;
  height: 120rpx;
}

.list .item .desc {
  /* margin-left: 30rpx; */
}

.list .item .title {
  font-size: 30rpx;
  width: 350rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.list .item .word {
  font-size: 24rpx;
  color: #808080;
  margin-top: 8rpx;
  text-align: left;
}

.list .item .time {
  text-align: right;
  height: 75rpx;
  overflow: hidden;
}

.list .item .money {
  color: #e96220;
  font-size: 28rpx;
  /* margin-top: 8rpx; */
}

.no_more {
  text-align: center;
  font-size: 28rpx;
  color: #808080;
}

.none-text {
  margin-top: 10rpx;
  align-self: center;
  color: #999;
}

.none-content {
  width: 256rpx;
  height: 256rpx;
  align-self: center;
}

.btn {
  position: absolute;
  margin: 40rpx auto 0;
  left: 25%;
  width: 50%;
}

.sub_btn {
  background: #96c3eb;
}

.gray_btn {
  background: gray;
}

.categoryList_left {
  width: 40%;
  height: 100%;
  vertical-align: top;
  display: inline-block;
  text-align: center;
}

.categoryList_left image {
  width: 200rpx;
  height: 200rpx;
  margin: 70rpx auto 0;
}

.categoryList_right {
  display: inline-block;
  width: 60%;
  height: 100%;
  vertical-align: top;
  position: relative;
}

.login_msg {
  text-align: center;
  margin-top: 80rpx;
  font-size: 30rpx;
  color: #96c3eb;
}

.desc_box {
  float: right;
  width: 580rpx;
  margin-left: 10rpx;
}

/*蒙层的结构，目的是覆盖整个手机界面*/

.isLogin_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.6;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.isLogin_box {
  width: 74%;
  overflow: hidden;
  position: fixed;
  top: 200rpx;
  left: 13%;
  z-index: 2000;
  background: #fff;
  border-radius: 5px;
}

.isLogin_msg {
  margin: 80rpx 40rpx 0;
  text-align: center;
}

.font20 {
  font-size: 40rpx;
}

.font15 {
  font-size: 30rpx;
  margin-top: 20rpx;
  color: #ababab;
}

.isLogin_img {
  width: 100%;
  height: 254rpx;
  margin: 60rpx auto;
}

.isLogin_img image {
  width: 100%;
  height: 100%;
}

.isLogin_button {
  width: 80%;
  margin: 20rpx auto 60rpx;
}

.isLogin_button button {
  width: 40%;
  display: inline-block;
  font-size: 26rpx;
  border-radius: 20px;
}

.isLogin_button .login {
  margin-left: 20%;
  background: #6aadff;
}

.isLogin_button .unLogin {
  background: #fff;
  border: 1px solid #6aadff;
  color: #6aadff;
}
