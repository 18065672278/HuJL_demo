/*地图图层*/

.place_info {
  position: relative;
  width: 90%;
  margin-left: 20rpx;
  margin-top: 10rpx;
  border-radius: 5rpx;
  background: white;
  padding: 10rpx;
}

.place_info_parking {
  font-size: 50rpx;
}

.place_info_surplus {
  color: #999;
}

.place_info_order {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-left: 20rpx;
  background-color: #ff5722;
  color: #fff;
  padding: 10rpx;
  width: 90%;
  border-radius: 5rpx;
  text-align: center;
}

/*地图图层*/

page {
  /* height:100vh;  */
  display: flex;
  flex-direction: column;
}

.map-box {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

#myMap {
  width: 100%;
  height: 100vh;
}

.main-btn {
  background: #fff;
  padding: 20rpx;
}

.main-text {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  height: 100rpx;
  margin: 0 auto;
  color: #fff;
  background: #4a4c5b;
  font-size: 32rpx;
  border-radius: 4rpx;
}

cover-image, cover-view {
  position: absolute;
}

/* 地图控件 */

.top-tips {
  position: absolute;
  width: 710rpx;
  height: 108rpx;
  left: 50%;
  z-index: 99;
  transform: translateX(-50%);
  top: 12rpx;
  display: flex;
  flex-direction: row;
  background: #fff;
  align-items: center;
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.top-icon {
  position: static;
  width: 74rpx;
  height: 74rpx;
  margin-right: 24rpx;
  border-radius: 50%;
}

.top-text {
  position: static;
  flex: 1;
}

.map-icon_point {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  margin-top: -40rpx;
  width: 52rpx;
  height: 75rpx;
}

.map-icon {
  right: 20rpx;
  width: 76rpx;
  height: 76rpx;
}

.map-icon_msg {
  bottom: 242rpx;
}

.map-icon_list {
  bottom: 42rpx;
  width: 42rpx;
  height: 42rpx;
  padding: 15rpx;
  border: 1px solid #e3e3e3;
  background-color: #fff;
}

.map-icon_reset {
  bottom: 142rpx;
  left: 20rpx;
}
