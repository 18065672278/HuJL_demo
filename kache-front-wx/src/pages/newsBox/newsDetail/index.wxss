.content {
  margin: 20rpx 40rpx;
  line-height: 40rpx;
}

.news_title {
  height: 40rpx;
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.news_auth {
  font-size: 24rpx;
  text-align: center;
  display: flex;
  margin-bottom: 20rpx;
  color: #adadad;
}

.news_auth::after, .news_auth::before {
  display: block;
  content: "";
  flex: 1;
  height: 2rpx;
  background: #adadad;
  margin: 20rpx 20rpx 0 20rpx;
}

.wxParse {
  font-size: 30rpx;
  line-height: 40rpx;
}
